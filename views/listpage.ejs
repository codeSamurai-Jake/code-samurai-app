<!DOCTYPE html>
<html>
    <head> <% include ./head %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
<body>
<% include ./header %>

    <a class="btn" href="/additem" >Add New Item</a>

    <div class="card">

    <table class="highlight">
        <tr>
            <th>Name</th><th>Developer</th><th>Game Link</th><th>Genre</th><th>Price</th><th>Added By</th><th>Likes</th><th>Actions</th><th>Date Added</th>
        </tr>

        <% items.forEach(function(item){  %>
        <tr>
            <td>
                <%= item.name %>
            </td>
            <td>
                <%= item.developer %>
            </td>
            <td>
                <a onclick="window.location.href='<%= item.link %>'">Link</a>
            </td>
            <td>
                <%= item.genre %>
            </td>
            <td>
                $<%= item.price %>
            </td>
            <td>
                <%= item.addedBy %>
            </td>
            <td>
                <%= item.likes %>
            </td>
            <td>
                <a href="/like?name=<%= item.name %>"><i class="material-icons" >favorite</i></a><a href="/delete?name=<%= item.name %>"><i class="material-icons">delete</i></a>
            </td>
            <td>
                <%= item.date %>
            </td>

        </tr>
        <% }) %>
    </table>

    </div>

<% include ./footer %>
</body>
</html>
